<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/howto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정우표를 선택해주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howto"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/img_happy"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txt_happy"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/subtext"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/happy"
        tools:srcCompat="@drawable/happy"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txt_happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더없이 행복한 하루였어요"
        app:layout_constraintBottom_toTopOf="@+id/img_exciting"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/img_happy" />

    <ImageView
        android:id="@+id/img_exciting"
        android:layout_width="62dp"
        android:layout_height="65dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txt_exciting"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/txt_happy"
        app:srcCompat="@drawable/exciting"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txt_exciting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="들뜨고 흥분돼요"
        app:layout_constraintBottom_toTopOf="@+id/img_normal"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/img_exciting" />

    <ImageView
        android:id="@+id/img_normal"
        android:layout_width="63dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_normal"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/txt_exciting"
        app:srcCompat="@drawable/normal" />

    <TextView
        android:id="@+id/txt_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평범한 하루였어요"
        app:layout_constraintBottom_toTopOf="@+id/img_anxiety"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/img_normal" />

    <ImageView
        android:id="@+id/img_anxiety"
        android:layout_width="63dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_anxiety"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/txt_normal"
        app:srcCompat="@drawable/anxiety" />

    <TextView
        android:id="@+id/txt_anxiety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생각이 많아지고 불안해요"
        app:layout_constraintBottom_toTopOf="@+id/img_angry"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/img_anxiety" />

    <ImageView
        android:id="@+id/img_angry"
        android:layout_width="60dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_angry"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/txt_anxiety"
        app:srcCompat="@drawable/angry" />

    <TextView
        android:id="@+id/txt_angry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부글부글 화가 나요"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_guideline"
        app:layout_constraintStart_toStartOf="@+id/v_guideline"
        app:layout_constraintTop_toBottomOf="@+id/img_angry" />


</androidx.constraintlayout.widget.ConstraintLayout>